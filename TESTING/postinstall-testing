#!/bin/bash

clear
# Root checker
if [[ $EUID -ne 0 ]]; then
	echo -e "\n---------------------------------------\n"
    echo -e "Setup: must be run logged as root (su - / sudo -i)" 1>&2
    echo -e "\n---------------------------------------\n"
	exit 1
fi

RED="\e[31m"
GREEN="\e[32m"
ENDCOLOR="\e[0m"
rootdir=$(pwd)

choice_yes=$(echo -e [${GREEN}O${ENDCOLOR}/${ENDCOLOR}n])
choice_no=$(echo -e [${ENDCOLOR}o${ENDCOLOR}/${RED}N${ENDCOLOR}])
unsure=$(echo -e ${RED}Say NO if unsure${ENDCOLOR})
task_ok=$(echo -e [${GREEN}OK${ENDCOLOR}])

debian_version="$(cat /etc/os-release | grep VERSION_CODENAME | cut -d '=' -f 2)"

echo -e "${RED}----------------------------------------------------------------------------------------------${ENDCOLOR}

                                        POSTINSTALL DEBIAN TESTING

${RED}----------------------------------------------------------------------------------------------${ENDCOLOR}


Veuillez rￃﾩpondre au questionnaire. L'installation se fera une fois celui-ci complￃﾩtￃﾩ.

${RED}Cet outil est toujours en dￃﾩvelloppement ! En cas de problￃﾨme, merci d'ouvrir une issue !${ENDCOLOR}

Dￃﾩpendances nￃﾩcessaires au script : bash-completion curl wget software-properties-common

Dￃﾩpendances de compatibilitￃﾩ/recommandￃﾩes : firmware-sof-signed dbus-x11 pipewire-audio

Verion de Debian actuelle : $debian_version
"
case $1 in
debug)
read -p "Version de Debian ￃﾠ dￃﾩbug : " debian_debug
if [[ $debian_debug = "testing" ]] ; then
    debian_version="$(echo testing)"
elif [[ $debian_debug = "sid" ]] ; then
    debian_version="$(echo sid)"
fi
;;
esac

case $debian_version in
testing|sid)
echo "Version de Debian valide
"
;;
*)
grep testing /etc/apt/sources.list > /dev/null; debian_source_version=$?
if [[ "$debian_source_version" = "0" ]]; then
echo "Version de Debian valide
"
elif [[ "$debian_version" != "trixie" ]] || [[ "$debian_version" != "sid" ]] || [[ "$debian_source_version" = "1" ]]; then
    echo -e "${RED}    Ce script ne supporte que les codename testing et sid.
    Veuillez modifier le fichier /etc/apt/sources.list en consￃﾩquence et upgrade votre systￃﾨme.
    Fin du script${ENDCOLOR}"
    sleep 2
    exit 1

fi
;;
esac

read -p "- Installer les dￃﾩpendances obligatoires $choice_yes ? " _depsobl
if [[ $_depsobl == "n" ]] || [[ $_depsobl == "N" ]]; then
    echo -e "${RED}Impossible de continuer l'installation sans les dￃﾩpendances. Fin de l'installation.${ENDCOLOR}"
    sleep 2
    exit 1
else
echo "Installation des dￃﾩpendances"
apt-get install -y bash-completion curl wget software-properties-common > /dev/null
fi

read -p "- Installer les dￃﾩpendances de compatibilitￃﾩ $choice_yes ? " _deps

sbstate="$(mokutil --sb-state)"
if [[ $sbstate == "SecureBoot enabled" ]]; then
    read -p "- SECUREBOOT ACTIF : Voulez-vous configurer le systￃﾨme de signature des modules/kernel $choice_yes ? " _secureboot
fi

is_user_sudo=$(sudo -k)
if [[ "$is_user_sudo" != "" ]] ; then
read -p "- Ajouter votre utilisateur au groupe SUDO $choice_yes ? " _sudo
fi

read -p "- Ajouter les dￃﾩpￃﾴts Contrib et Non-free (Obligatoire pour Steam et Nvidia) $choice_yes ? " _repos

read -p "- Ajouter le Multilib (Obligatoire pour le Gaming) $choice_yes ? " _multilib
if [[ $_multilib = "o" ]] || [[ $_multilib = "O" ]] || [[ $_multilib = "" ]]; then
    read -p "- Installer les applications Gaming (Steam, Lutris Wine) $choice_yes ? " _gaming
else
    _gaming=$(echo "n")
fi

read -p "- Augmenter la valeur du vm.max_map_count (Compatibilitￃﾩ augmentￃﾩe pour les jeux vidￃﾩos) $choice_yes ? " _vmmap

if [[ $debian_version == "testing" ]]; then
    read -p "- Ajouter Sid en PIN 10 (Ex: Virtualbox) $choice_yes ? " _sid
fi

read -p "- Installer Flatpak et le dￃﾩpￃﾴt Flathub (GNOME) $choice_no ? " _flatpak

read -p "- Installer Pacstall (AUR pour Debian) $choice_no ? " _pacstall

read -p "- Avez-vous un GPU Nvidia ? $choice_no ? " _gpu

case $_gpu in
o|O)
read -p "- Installer le driver Nvidia (Dￃﾩpot Nvidia - Derniￃﾨre Version) $choice_yes ? " _nvidia
read -p "- Installer Cuda $choice_yes ? " _cuda
;;
*)
read -p "- Installer Mesa Vulkan $choice_yes ? " _mesa
read -p "- Installer le driver AMD ROCm $choice_no ? " _rocm
;;
esac

read -p "Le systￃﾨme va maintenant ￃﾪtre modifiￃﾩ. Etes vous certains de vos rￃﾩponses $choice_no ? " _final

case $_final in
O|o)
source ./cases
;;
N|n|*)
echo "Installation intￃﾩrrompue par l'utilisateur"
exit 2
;;
esac
